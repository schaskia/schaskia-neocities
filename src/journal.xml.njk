---
permalink: /journal/feed.xml
eleventyExcludeFromCollections: true
---{% set posts = collections.journal | reverse %}<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <channel>
    <title>Les pires scriptures ever</title>
    <link>{{ metadata.url }}/journal/</link>
    <description>RSS feed for my journal posts</description>
    <language>fr</language>
    {% for post in posts %}
      <item>
        <title>{{ post.data.title | striptags | xmlEscape }}</title>
        <link>{{ metadata.url }}{{ post.url }}</link>
        <guid>{{ metadata.url }}{{ post.url }}</guid>
        <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
        <description><![CDATA[{{ post.templateContent }}]]></description>
      </item>
    {% endfor %}
  </channel>
</rss>